datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL") // PostgreSQL connection string
}

generator client {
  provider = "prisma-client-js"
}

enum Categories {
  TSHIRTS
  HOODIES
  DRIFITS
}

model Customer {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  playerName  String
  playerNumber Int
  email       String
  phone       String
  storeId     Int     @default(1)
  orders      Order[]
}

model Order {
  id         Int       @id @default(autoincrement())
  customerId Int
  storeId    Int       @default(1)
  totalPrice Float
  createdAt  DateTime  @default(now())
  items      OrderItem[]
  notes      String?
  customer   Customer  @relation(fields: [customerId], references: [id])
}

model OrderItem {
  id        Int      @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  size      String
  color     String   @default("black")
  isAddBack Boolean
  category  Categories  @default(TSHIRTS)
  title     String   @default("Retro")
  price     Float    @default(20.00)
  order     Order    @relation(fields: [orderId], references: [id])
}
